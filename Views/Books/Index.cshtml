

@{
    ViewData["Title"] = "Index";
    List<Book> books = ViewBag.Books;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in books) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a asp-controller="Books"
                   asp-action="Details"
                   asp-route-id="@item.Id">@item.Title</a>
            </td>

        </tr>
}
    </tbody>
</table>
